    <properties>
        <springfox-swagger.version>2.9.2</springfox-swagger.version>
        <sonar.projectKey>de.fraunhofer.isst.ids.framework.messaging.core</sonar.projectKey>
        <spring-boot-starter-web.version>2.2.0.RELEASE</spring-boot-starter-web.version>
        <spring-tx.version>5.2.0.RELEASE</spring-tx.version>
        <spring-web.version>5.2.1.RELEASE</spring-web.version>
        <javax.servlet-api.version>4.0.1</javax.servlet-api.version>
        <javax.ws.rs-api.version>2.1.1</javax.ws.rs-api.version>
    </properties>

    <profiles>
        <profile>
            <id>uml-gen</id>
            <dependencies>
                <!-- https://mvnrepository.com/artifact/de.elnarion.maven/plantuml-generator-maven-plugin -->
                <dependency>
                    <groupId>de.elnarion.maven</groupId>
                    <artifactId>plantuml-generator-maven-plugin</artifactId>
                    <version>1.0.0</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>plantuml-generator-maven-plugin</artifactId>
                        <groupId>de.elnarion.maven</groupId>
                        <version>1.0.0</version>
                        <executions>
                            <execution>
                                <id>generate-entity-diagram</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-test-sources</phase>
                                <configuration>
                                    <outputFilename>entities.puml</outputFilename>
                                    <scanPackages>
                                        <scanPackage>
                                            de.fraunhofer.isst.ids.framework.messaging.core
                                        </scanPackage>
                                    </scanPackages>
                                    <hideMethods>true</hideMethods>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

